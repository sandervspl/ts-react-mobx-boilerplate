{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowUnreachableCode": true,
    "experimentalDecorators": true,
    "pretty": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "src/*": ["/*"],
      "app/*": ["app/*"],
      "common/*": ["app/components/common/*"],
      "@common": ["app/components/common/index"],
      "components/*": ["app/components/*"],
      "config/*": ["config/*"],
      "@config": ["config/index"],
      "fonts/*": ["app/static/fonts/*"],
      "images/*": ["app/static/images/*"],
      "modules/*": ["app/components/modules/*"],
      "@modules": ["app/components/modules/index"],
      "server/*": ["server/*"],
      "services/*": ["app/services/*"],
      "@services": ["app/services/index"],
      "stores/*": ["app/stores/*"],
      "styles/*": ["app/styles/*"],
      "@types": ["types/index"],
      "vectors/*": ["app/static/vectors/*"],
      "styled-components": ["app/services/styled-components.ts"]
    },
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "es6"]
  }
}
